# Example Terraform variables
# Copy this to terraform.tfvars and customize as needed

# Cluster configuration
cluster_name       = "first-responder"
kubernetes_version = "v1.31.0"
worker_nodes       = 2

# ArgoCD configuration
argocd_chart_version = "7.7.5"

# Git repository for GitOps
git_repo_url        = "https://github.com/VENKATESHWARAN-R/first-responder.git"
git_target_revision = "main"
git_path            = "infra/argocd/cluster-addons"

# Enable/disable cluster addons
enable_cluster_addons = true
